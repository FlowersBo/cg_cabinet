/* pages/wxlogin/index.wxss */
/* 授权登陆 */
page{
  background-color: #fff;
}
.wxloginWrap{
  width: 100%;
  height: 100%;
  z-index: 10;
}
.wxLogin{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 250rpx;
  font-size: 45rpx;
}
 
.header{
  width: 450rpx;
  height: 220rpx;
}
.headerImage {
  width: 100%;
  height: 100%;
}
 
.wxLogin-text {
  width: 600rpx;
  height: 200rpx;
  border-top: 1rpx solid #ddd;
  font-size: 26rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding-top: 20rpx;
}
.text_top{
  font-size: 32rpx;
  font-weight: bold;
}
.text_bottom{
  color: #ccc;
}
.bottom {
  width: 650rpx;
  border-radius: 80rpx;
  margin-top:50rpx;
  font-size: 38rpx;
  font-weight: bold;
  /* background-image: linear-gradient(-90deg, red, yellow); */
  /* background-color: #FDE50D; */
  background-color: #0042BB;
  letter-spacing: 4rpx;
  color: rgb(247, 244, 244);
}
.cu-modal.bottom-modal .cu-dialog {
  border-radius: 26rpx 26rpx 0 0;
}
.btn{
  width: 130rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 36rpx;
  background-color: #fff;
  padding: 0;
  margin: 0;
}
button::after {
  border: none;
}
.authorization-remind{
  padding: 20rpx;
  padding-bottom: 50rpx;
  font-size: 28rpx;
  text-indent: 36rpx;
  line-height: 1.5;
  text-align: left;
}