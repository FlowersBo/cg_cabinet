/* 日期 */
.con {
  display: flex;
  flex-direction: row-reverse;
}

.con .orderDate {
  width: 250rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  border: 1px solid #c9c9c9;
  border-radius: 30rpx;
  background: #f8f8f8;
}

.con .orderDate picker {
  width: 180rpx;
  height: 100%;
  float: left;
  padding-left: 25rpx;
}

.con .orderDate image {
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.orderListWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 34rpx;
}

.orderList {
  width: 720rpx;
  height: 362rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 10rpx 17rpx;
  position: relative;
}

.iconduigou1{
  position: absolute;
  top: 50%;
  margin-top: -88rpx;
  right: 20rpx;
  font-size: 100rpx;
  color: #62D7AC;
}

