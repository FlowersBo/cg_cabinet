.order_content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 28rpx;
}

.order_detail {
  display: flex;
  justify-content: left;
}

.detail_name {
  width: 160rpx;
}

.detail_content {
  flex: 1;
  min-width: 0;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

