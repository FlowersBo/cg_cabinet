/* pages/login/index.wxss */
.login {
  width: 100%;
  height: auto;
  padding: 0 50rpx;
  box-sizing: border-box;
}

.loginTitle {
  display: block;
  width: 100%;
  font-size: 55rpx;
  padding: 158rpx 0;
  text-align: center;
}

.phone-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 89rpx;
  padding-left: 60rpx;
  margin-bottom: 20rpx;
  background: #ddd;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.phone {
  font-size: 28rpx;
  color: #333;
}

.number {
  width: 310rpx;
  color: #333;
  font-size: 28rpx;
}

.getNum {
  width: 150rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  border-radius: 8rpx;
  background: #0042BB;
}
.repeatGetNum{
  background-color: #4C8AFB;
  color: fff;
}
.btn{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #0042BB;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  letter-spacing: 20rpx;
  display: block;
  margin-top: 80rpx;
  border-radius: 8rpx;
}

.submit_hover,
.getNum_hover {
  transform: scale(0.98, 0.98);
}