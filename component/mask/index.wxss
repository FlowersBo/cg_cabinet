/* component/console/index.wxss */
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
}

/*content*/
.drawer_box {
  width: 660rpx;
  height: 400rpx;
  /* background-color: #0042BB; */
  background-image: linear-gradient(90deg, #0042BB, #8b62bb);
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  margin: -300rpx 45rpx 0 45rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.drawer_box_content {
  width: 600rpx;
  height: 200rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 10rpx;
}
.drawer_box_contentText{
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.authorization_title{
  font-size: 36rpx;
  font-weight: bold;
}
.authorization_content{
  text-indent: 42rpx;
}
.btnWrap{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.drawer_box_btn {
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 10rpx;
  background-image: linear-gradient(90deg, #FE882E, #FCB918);
  /* background-color: #FEA91F; */
  color: #fff;
  font-size: 36rpx;
}